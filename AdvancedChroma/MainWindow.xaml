<Window x:Class="AdvancedChroma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedChroma"
        mc:Ignorable="d"
        MouseDown="mouseClick"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="starlight" Content="Starlight" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="reactive" Content="Reactive" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="button_Click" Margin="0,25,0,0"/>

    </Grid>
</Window>
